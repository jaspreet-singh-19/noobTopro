<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageIV"
        android:layout_width="71dp"
        android:layout_height="77dp"
        android:src="@mipmap/default_img"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="20dp"
        android:text="TextView"
        android:layout_marginStart="14dp"
        android:layout_alignTop="@+id/imageIV"
        android:layout_toEndOf="@+id/imageIV"
        android:layout_above="@+id/descriptionTV" />

    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="229dp"
        android:layout_height="46dp"
        android:text="TextView"
        android:layout_alignBottom="@+id/imageIV"
        android:layout_alignStart="@+id/titleTV" />


</RelativeLayout>